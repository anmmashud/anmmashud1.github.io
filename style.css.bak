/* style.css */

body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
}

header {
    background-color: #333;
    color: #fff;
    padding: 10px 0;
    text-align: center;
}

.logo {
    font-size: 1.5em;
}

.menu-bar {
    list-style: none;
    padding: 0;
}

.menu-bar li {
    display: inline;
    margin: 0 15px;
}

.menu-bar a {
    color: #fff;
    text-decoration: none;
}

footer {
    text-align: center;
    padding: 10px 0;
    background-color: #333;
    color: #fff;
    position: fixed;
    width: 100%;
    bottom: 0;
}
